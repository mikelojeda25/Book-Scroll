<div class="card shadow-sm">
  <div class="card-header bg-primary text-white d-flex justify-content-between">
    <h2 class="h4 mb-0"><%= book.title %></h2>
    <a href="/books" class="btn btn-sm btn-secondary ms-2">View All Books</a>
  </div>
  <div class="card-body">
    <p class="card-text">
      <img
        src="<%= book.coverImagePath %>"
        class="img-fluid rounded mb-3"
        alt="<%= book.title %> Cover"
        style="max-height: 300px"
      />
      Date Created: <%= book.createdAt ? book.createdAt.toLocaleDateString() :
      'N/A' %>
    </p>
  </div>

  <div class="card-footer d-flex justify-content-end gap-2 align-items-center">
    <a href="/books/<%= book.id %>/edit" class="btn btn-info text-white"
      >Edit</a
    >

    <%- include('../_delete_form', { book: book }) %>
  </div>
</div>

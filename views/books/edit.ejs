<h2>Edit Book - <%= book.title %></h2>

<form
  action="/books/<%= book.id %>?_method=PUT"
  method="POST"
  enctype="multipart/form-data"
>
  <%- include('./_form_fields', { book: book }) %>
  <a href="/books/<%= book.id %>">Cancel</a>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
